<% if @expense.errors.empty? %>
  // add the row to the table, show alert and hide modal

  // Selecciona la tabla de la pagin actual (index.html.erb de Expenses) y le agrega la informaci√≥n del _row.html.erb
  // $('table tbody').append(' <%= j render "row", expense: @expense %>');
  $('table tbody').find('#<%= @expense.id %>').replaceWith("<%= j render 'row', expense: @expense %>");
  $('.alert-success').html("The product has been updated successfully").show();
  $('#newExpense').modal('hide');
<% else %>
  // show first error
  alert('<%= @expense.errors.full_messages[0] %>');
<% end %>