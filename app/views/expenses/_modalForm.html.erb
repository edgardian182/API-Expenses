<div class="modal fade" id="newExpense" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        
        EXPENSE

      </div>

      <%= form_for @expense, remote: true do |f| %>
        <div class="modal-body">
            
            <div class="row">
              <div class="col-xs-6">
                <div class="form-group">
                  <%= f.label :type %>
                  <%= f.collection_select :type_id, Type.all, :id, :name, {selected: 1}, {class: "form-control"} %>
                </div>
              </div>
              <div class="col-xs-6">
                <div class="form-group">
                  <%= f.label :date %>
                  <%= f.date_field :date, {class: "form-control"} %>
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :concept %>
              <%= f.text_field :concept, class: "form-control" %>
            </div>
            
            <div class="row">
              <div class="col-xs-6">
                <div class="form-group">
                  <%= f.label :category %>
                  <%= f.collection_select :category_id, Category.all, :id, :name, { selected: 1}, {class: "form-control"} %>
                </div>
              </div>
              <div class="col-xs-6">
                <div class="form-group">
                  <%= f.label :amount %>
                  <%= f.text_field :amount, class: "form-control text-right", placeholder: "0" %>
                </div>
              </div>
            </div>

        </div>

        <div class="modal-footer">
          <%= link_to "Cancel", "#", class:"btn btn-default", 'data-dismiss': "modal" %>
          <%= f.submit class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>

  </div>
</div>